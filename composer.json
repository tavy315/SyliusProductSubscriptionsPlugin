{
    "name": "tavy315/sylius-product-subscriptions-plugin",
    "type": "sylius-plugin",
    "description": "Send notifications to your customers when a product returns in stock",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "sylius/sylius": "^1.12"
    },
    "require-dev": {
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^v4.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Tavy315\\SyliusProductSubscriptionsPlugin\\": "src/"
        }
    },
    "prefer-stable": true
}
